{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./libretto/static/js/",
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "allowJs": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
