{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./libretto/static/js/",
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "module": "nodenext",
    "allowJs": true,
    "target": "es5"
  },
  "include": ["./src/**/*"]
}
